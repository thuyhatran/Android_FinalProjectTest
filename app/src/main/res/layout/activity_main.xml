<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTintMode="screen"
    android:background="@color/colorMainBG"
    tools:context="example.thuya.com.finalproject.MainActivity">


    <Button
        android:text="Pick up an Object"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="112dp"
        android:layout_marginRight="49dp"
        android:layout_marginLeft="49dp"
        android:id="@+id/btt_main_pickup"
        android:background="@color/colorButtonBG"
        android:textColor="@color/colorButtonText"
        android:shadowColor="@color/colorShadowText"
        android:shadowRadius="1.2"
        android:shadowDx="1.2"
        android:shadowDy="1.2"
        android:textSize="18dp"

        />

    <Button
        android:text="List all Picked-up Objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:id="@+id/btt_pickedup_objects"
        android:layout_below="@+id/btt_main_pickup"
        android:layout_marginTop="20dp"
        android:layout_marginRight="49dp"
        android:layout_marginLeft="49dp"
        android:background="@color/colorButtonBG"
        android:textColor="@color/colorButtonText"
        android:shadowColor="@color/colorShadowText"
        android:shadowRadius="1.2"
        android:shadowDx="1.2"
        android:shadowDy="1.2"
        android:textSize="18dp"
         />

    <Button
        android:text="List all Objects"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/btt_all_objects"
        android:layout_below="@+id/btt_pickedup_objects"
        android:layout_marginTop="20dp"
        android:layout_marginRight="49dp"
        android:layout_marginLeft="49dp"
        android:background="@color/colorButtonBG"
        android:textColor="@color/colorButtonText"
        android:shadowColor="@color/colorShadowText"
        android:shadowRadius="1.2"
        android:shadowDx="1.2"
        android:shadowDy="1.2"
        android:textSize="18dp"
        android:fadingEdgeLength="@dimen/activity_horizontal_margin"
        />

</RelativeLayout>
